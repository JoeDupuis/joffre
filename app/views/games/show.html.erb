<%= render 'dev_user_switcher' %>

<% if @game.pending? %>
  <%= render 'lobby' %>
<% elsif @game.bidding? %>
  <%= render 'scores' if @game.round_scores.any? %>
  <%= render 'bidding' %>
  <%= render 'cards' %>
<% elsif @game.playing? %>
  <%= render 'scores' %>
  <%= render 'play' %>
  <%= render 'cards' %>
<% elsif @game.done? %>
  <%= render 'done' %>
<% end %>
