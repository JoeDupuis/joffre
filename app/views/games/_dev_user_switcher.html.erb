<% if Rails.env.development? || Rails.env.test? %>
  <div class="dev-user-switcher">
    <h3>Dev: Switch User</h3>
    <div class="current-user-display">
      Signed in as: <strong><%= Current.user.name %></strong>
    </div>
    <div class="dev-user-switcher-buttons">
      <% @game.ordered_players.each do |player| %>
        <%= button_to dev_switch_user_path(user_id: player.user.id, game_id: @game.id), class: "dev-user-switcher-button #{'current-user' if player.user == Current.user}" do %>
          <span class="user-name"><%= player.user.name %></span>
          <span class="team-badge">Team <%= player.team %></span>
          <% if player.dealer? %>
            <span class="dealer-badge">Dealer</span>
          <% end %>
          <% if @game.playing? && player.active? %>
            <span class="active-badge">Active</span>
          <% end %>
          <% if player.user == Current.user %>
            <span class="current-badge">âœ“</span>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
